# NextAuth.js Configuration
# The canonical URL of your Next.js application.
# Used by NextAuth.js for callback URLs and other internal functions.
# For local development, this is typically http://127.0.0.1:3000
NEXTAUTH_URL=http://127.0.0.1:3000

# A secret string used to sign cookies and tokens by NextAuth.js.
# Generate a strong, random string for this.
# You can generate one using: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# Spotify API Credentials
# Get these from your Spotify Developer Dashboard (https://developer.spotify.com/dashboard)
# Ensure your Spotify App has the redirect URI: http://localhost:3000/api/auth/callback/spotify (or your NEXTAUTH_URL equivalent)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Supabase Configuration
# Get these from your Supabase project settings.
# NEXT_PUBLIC_SUPABASE_URL is the public URL for your Supabase project.
# It's prefixed with NEXT_PUBLIC_ to be accessible on the client-side.
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
# SUPABASE_SERVICE_ROLE_KEY is a secret key for administrative access to your Supabase backend.
# This key should be kept confidential and only used on the server-side.
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (for Drizzle ORM)
# This is the connection string for your Supabase PostgreSQL database.
# Format: postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST].supabase.co:5432/postgres
# Replace [YOUR-PASSWORD] and [YOUR-HOST] with your actual Supabase DB credentials.
DATABASE_URL="postgresql://postgres:your_db_password_here@db.your_supabase_project_id.supabase.co:5432/postgres"

# OpenRouter API Configuration
# Get your API key from OpenRouter (https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_openrouter_api_key_here